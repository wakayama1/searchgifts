<h1>users#show</h1>
<p>名前 : <%= @user.name %></p>
<p>メールアドレス : <%= @user.email %></p>
<p>プロフィール : <%= @user.profile %></p>

<% if current_user.id == @user.id %>
  <%= link_to "編集する", edit_user_registration_path %>
<% end %>

<h2>ユーザーの投稿一覧</h2>
<% @user.presents.each do |t| %>
  <%= t.present_name %>
  <%= link_to "詳細へ", present_path(t.id) %>
  <%= link_to "編集する", edit_present_path(t.id) %>
  <%= button_to "削除する", present_path(t.id), method: :delete %>
  
<% end %>

<!-- 以下はいいね機能を実装している場合-->
<h2>ユーザーがいいねした投稿一覧</h2>
<% @user.liked_presents.each do |t| %>
  <%= t.user.name %>
  <%= t.present_name %>

<% end %>
<!-- ここまで-->


<%= link_to "Present一覧に戻る", presents_path %>

